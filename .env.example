## Copy this file to `.env.local` and fill in values locally.

# Optional: Neon Postgres connection
# DATABASE_URL="postgresql://user:password@host/db?sslmode=require"

# Optional: Vercel Blob token for image uploads
# BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxx"

# Recommended in production: session secret for moderation
# MODERATION_SESSION_SECRET="change-me"

# Optional: restrict form submissions to these hosts (comma-separated)
# ALLOWED_HOSTS="localhost:3000,secondhorse.nl"

# Optional: hCaptcha secret (enables captcha on /new in production)
# HCAPTCHA_SECRET="0x0000000000000000000000000000000000000000"

# Optional: public site URL for metadata
# NEXT_PUBLIC_SITE_URL="https://secondhorse.nl"


# Optional: feature flag to enable the public leaderboard
# ENABLE_LEADERBOARD=1

# Optional: vote guard tuning (defaults shown)
# VOTE_GUARD_SALT="change-me"
# VOTE_GUARD_MINUTE_LIMIT=15
# VOTE_GUARD_HOURLY_LIMIT=120
# VOTE_GUARD_PROFILE_LIMIT=6
